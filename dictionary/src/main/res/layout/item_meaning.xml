<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:background="@color/White"
    android:padding="@dimen/dp_5">

    <TextView
        android:id="@+id/tv_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:textSize="@dimen/sp_18"
        android:text="@string/definition" />

    <TextView
        android:id="@+id/tv_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_below="@id/tv_definition"
        android:textColor="@color/detailBlack"
        android:textSize="@dimen/sp_17"
        tools:text="Meaning" />

    <TextView
        android:id="@+id/tv_noun_verb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_meaning"
        android:textColor="@color/detailBlack"
        android:textSize="@dimen/sp_14"
        tools:text="noun" />

    <TextView
        android:id="@+id/tv_example_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/tv_noun_verb"
        android:textSize="@dimen/sp_18"
        android:text="@string/examples" />

    <TextView
        android:id="@+id/tv_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_example_text"
        android:textColor="@color/detailBlack"
        android:textSize="@dimen/sp_17"
        tools:text="example" />

    <ImageView
        android:id="@+id/tv_audio_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_example"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@drawable/ic_play_circle"/>

    <TextView
        android:id="@+id/tv_phonetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/tv_audio_clip"
        android:textSize="@dimen/sp_18"
        android:text="@string/phonetic" />

    <TextView
        android:id="@+id/tv_phonetic_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phonetic"
        android:textColor="@color/detailBlack"
        android:textSize="@dimen/sp_17"
        tools:text="phonetic word" />

</RelativeLayout>