<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/videoPlayerFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:controller_layout_id="@layout/item_playback_control" />

        <LinearLayout
            android:id="@+id/toolsController"
            android:layout_width="@dimen/tools_dock_width"
            android:layout_height="match_parent"
            android:layout_gravity="end|center"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_marginBottom="@dimen/toolbar_margin_bottom"
            android:background="#DAFFFFFF"
            android:showDividers="middle"
            android:dividerPadding="4dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/calculatorImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/calculator_state" />

            <ImageView
                android:id="@+id/dictionaryImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/dictionary_state" />

            <ImageView
                android:id="@+id/searchImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/search_state" />

            <ImageView
                android:id="@+id/bookmarkListImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/bookmark_state" />
            <ImageView
                android:id="@+id/highlighterListImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_highlighter_list_white_24dp" />
        </LinearLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
