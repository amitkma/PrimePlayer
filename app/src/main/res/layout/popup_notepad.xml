<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:id="@+id/savedNotesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/saved_notes"
            android:textColor="#8000"
            android:textSize="14dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/notepadPopupRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp">
        </android.support.v7.widget.RecyclerView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addNoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_add_white_24dp"
            app:backgroundTint="@color/DarkCyan"
            app:fabSize="normal"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/addNoteView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/discardNoteImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:layout_toRightOf="@+id/discardNoteImageView"
            android:text="@string/add_note"
            android:textAllCaps="true"
            android:textColor="@color/detailBlack"
            android:textSize="18dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/noteTitleInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <EditText
                android:id="@+id/noteTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="Title"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/noteTitleInputLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorGrey"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/noteDescInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteTitleInputLayout"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <EditText
                android:id="@+id/noteDescEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Note"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:id="@+id/saveNoteButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:backgroundTint="@color/OrangeRed"
            app:fabSize="normal"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
        android:src="@drawable/ic_done_24dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>